<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBarCompatNoElevation</item>
        <item name="android:colorPrimary">@color/apptheme_primary</item>
        <item name="android:colorPrimaryDark">@color/apptheme_primary_dark</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBarWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/city_text_color</item>
    </style>
    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="AppThemeNoActionBarBlack" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@android:color/black</item>
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/city_text_color</item>
    </style>
    <style name="AppThemeNoActionBarGrey" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/apptheme_primary</item>
        <item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
        <item name="logo">@drawable/ab_hobbistan_logo</item>
        <item name="titleTextColor">@color/city_text_color</item>
        <item name="colorAccent">@color/city_text_color</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/apptheme_primary</item>
        <item name="android:colorPrimaryDark">@color/apptheme_primary_dark</item>
        <item name="colorAccent">@color/city_text_color</item>
    </style>
    <style name="AppThemeNoActionBarEventDetails" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/apptheme_primary</item>
        <item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
        <item name="colorAccent">@color/city_text_color</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="ActionBarWithLogo" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/apptheme_primary</item>
    </style>

    <style name="ActionBarCompatNoElevation" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/apptheme_primary</item>
        <item name="logo">@drawable/ab_hobbistan_logo</item>
        <item name="elevation">0dp</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="titleTextColor">@color/city_text_color</item>
        <item name="logo">@drawable/ab_hobbistan_logo</item>
    </style>
    >

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>
