<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/AppThemeWithNoShadow</item>
        <item name="colorPrimary">@color/apptheme_primary</item>
        <item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBarWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/city_text_color</item>
    </style>

    <style name="AppThemeNoActionBarBlack" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/city_text_color</item>
    </style>
    <style name="AppThemeNoActionBarGrey" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/apptheme_primary</item>
        <item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
        <item name="logo">@drawable/ab_hobbistan_logo</item>
        <item name="colorAccent">@color/city_text_color</item>
    </style>
    <style name="AppThemeNoActionBarEventDetails" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/apptheme_primary</item>
        <item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
        <item name="colorAccent">@color/city_text_color</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>
    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>


    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/apptheme_primary</item>
        <item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeWithNoShadow" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="background">@color/apptheme_primary</item>
        <item name="logo">@drawable/ab_hobbistan_logo</item>
        <item name="displayOptions">useLogo|showHome</item>

        <item name="android:windowActionBar">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/apptheme_primary</item>
        <item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
        <item name="android:actionModeBackground">@color/apptheme_primary_dark</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="titleTextColor">@color/city_text_color</item>
        <item name="logo">@drawable/ab_hobbistan_logo</item>
    </style>

    <style name="ThemeOverlay.MyApp.BroadActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="titleTextColor">@color/city_text_color</item>

    </style>


    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>



</resources>
