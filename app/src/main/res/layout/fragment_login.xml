<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorRed"
    android:orientation="vertical"

    >

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:drawableLeft="@drawable/login_mail_icon"
        android:drawablePadding="8dp"
        android:backgroundTint="@color/colorWhite"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_email"
        android:hint="Password"
        android:drawableLeft="@drawable/login_pass_icon"
        android:drawablePadding="8dp"
        android:backgroundTint="@color/colorWhite"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:inputType="textWebPassword"
        />

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_password"
        android:text="Sign In"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@color/colorGreen"
        android:layout_marginTop="50dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:textSize="16dp"
        />


    <ImageView
        android:id="@+id/btn_sign_in_or"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_below="@+id/btn_sign_in"
        android:text="Sign In"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@android:color/transparent"
        android:layout_marginTop="20dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:textSize="16dp"
        android:src="@drawable/or_symbol"
        />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center"

        >
        <Button
            android:id="@+id/frag_login_fb"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_below="@+id/editText_password"
            android:text="Sign In with facebook"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/fb"


            android:minWidth="30dp"
            android:minHeight="30dp"
            android:drawablePadding="2dp"
            android:textSize="10dp"
            />

        <Button
            android:id="@+id/frag_login_google"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@+id/editText_password"
            android:text="Sign In with google+"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textColor="@color/colorRed"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/gplus_new"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:layout_marginLeft="30dp"
            android:drawablePadding="2dp"
            android:textSize="10dp"
            />
    </LinearLayout>


</LinearLayout>
