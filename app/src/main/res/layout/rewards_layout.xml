<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:layout_margin="3dp">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/user_image_layout">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/rewards_user_img"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/profile_icon"
                    android:layout_centerHorizontal="true"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/rewards_level_image_url"

                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/amateur_trophy"/>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:id="@+id/rewards_user_name"
                android:layout_below="@+id/user_image_layout"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textSize="18dp"
                android:textColor="@color/title_red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rewards_user_hobby"
                android:text="Music"
                android:padding="2dp"
                android:layout_below="@+id/rewards_user_name"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/White"
                android:id="@+id/rewards_points_layout"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/rewards_points_image"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/star"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_toRightOf="@+id/rewards_points_image"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="3dp"
                    android:text="0"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/rewards_points_total_count"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rewards_points_subtext"
                    android:layout_below="@+id/rewards_points_image"
                    android:layout_alignStart="@+id/rewards_points_image"
                    android:layout_alignLeft="@+id/rewards_points_image"
                    android:layout_marginTop="8dp"
                    android:textSize="11dp"
                    android:text="+300 more points for next Level"
                    android:lines="3"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="3dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/White"
                android:id="@+id/rewards_visa_layout"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/rewards_visa_image"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/visa"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/rewards_visa_image"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="1dp"
                    android:text="0"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/rewards_visa_total_count"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rewards_visa_subtext"
                    android:layout_below="@+id/rewards_visa_image"
                    android:layout_alignStart="@+id/rewards_visa_image"
                    android:layout_alignLeft="@+id/rewards_visa_image"
                    android:layout_marginTop="8dp"
                    android:text="Sports,Theatre,Comedy,+2 more"
                    android:lines="3"
                    android:textSize="11dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/White"
                android:id="@+id/rewards_leaderboard_layout"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/rewards_leaderboard_image"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/leaderboard"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/rewards_leaderboard_image"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="3dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="0"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/rewards_leaderboard_total_count"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rewards_leaderboard_subtext"
                    android:layout_below="@+id/rewards_leaderboard_image"
                    android:layout_alignStart="@+id/rewards_leaderboard_image"
                    android:layout_alignLeft="@+id/rewards_leaderboard_image"
                    android:layout_marginTop="8dp"
                    android:text="position in Leaderboard"
                    android:lines="3"
                    android:textSize="11dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/myboard"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="My Board"
                android:padding="2dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/White"
                android:id="@+id/rewards_photos_layout"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/rewards_photos_image"
                    android:layout_marginTop="30dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/photo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_toRightOf="@+id/rewards_photos_image"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="4dp"
                    android:text="0"
                    android:textSize="18dp"
                    android:singleLine="true"

                    android:id="@+id/rewards_photos_total_count"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/White"
                    android:layout_below="@+id/rewards_photos_image"></View>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/White"
                android:id="@+id/rewards_engagements_layout"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/rewards_engagements_image"
                    android:layout_marginTop="30dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/engagements"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/rewards_engagements_image"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="4dp"
                    android:text="0"
                    android:textSize="18dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:layout_marginRight="1dp"
                    android:id="@+id/rewards_engagements_total_count"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/White"
                    android:layout_below="@+id/rewards_engagements_image"></View>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/White"
                android:id="@+id/rewards_checkins_layout"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/rewards_checkins_image"
                    android:layout_marginTop="30dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/checkin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/rewards_checkins_image"
                    android:layout_marginTop="25dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginLeft="4dp"
                    android:text="0"
                    android:textSize="18dp"
                    android:singleLine="true"
                    android:layout_marginRight="1dp"
                    android:id="@+id/rewards_checkins_total_count"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/White"
                    android:layout_below="@+id/rewards_checkins_image"></View>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/White"
                android:id="@+id/rewards_bookings_layout"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/rewards_bookings_image"
                    android:layout_marginTop="30dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/bookings"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/rewards_bookings_image"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="4dp"
                    android:text="0"
                    android:textSize="18dp"
                    android:singleLine="true"
                    android:layout_marginRight="1dp"
                    android:id="@+id/rewards_bookings_total_count"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/White"
                    android:layout_below="@+id/rewards_bookings_image"></View>


            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:typeface="serif"
                android:text="View Full Statistics"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/view_statistics"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f2f2f2"></View>

    </LinearLayout>

</ScrollView>