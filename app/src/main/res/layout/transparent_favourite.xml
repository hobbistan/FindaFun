<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/navi_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/touch_image_up"
        android:textColor="@color/actionbar_color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/favorite_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="79dp"
        android:src="@drawable/touch_image_up"
        android:textColor="@color/actionbar_color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/popular_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="79dp"
        android:src="@drawable/touch_image_up"
        android:textColor="@color/actionbar_color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/hotspot_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="79dp"
        android:src="@drawable/touch_image_up"
        android:textColor="@color/actionbar_color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/eventlst_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="22dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/touch_image_up"
        android:textColor="@color/actionbar_color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/map_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/touch_image_up"
        android:textColor="@color/actionbar_color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/nearby_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/touch_image_up"
        android:textColor="@color/actionbar_color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/adv_screen_pt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/touch_image_up"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/add_event_pt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/touch_image_up"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/gami_pt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/touch_image_up"
        android:visibility="gone" />

    <TextView
        android:id="@+id/trans_navigation_drawer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/trans_popular"
        android:layout_marginTop="28dp"
        android:background="@drawable/popup_bg_left"
        android:padding="20dp"
        android:text="Menu: Customize Your City Profile and Preferences. "
        android:textColor="@color/Black"
        android:textSize="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/trans_favorite"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gami_pt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/popup_bg_left"
        android:maxLines="2"
        android:padding="20dp"
        android:text="Only those events matching your preferences."
        android:textColor="@color/Black"
        android:textSize="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/trans_popular"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popular_pnt_icon"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/popup_bg_left"
        android:maxLines="2"
        android:padding="20dp"
        android:text="The most popular of the events around you."
        android:textColor="@color/Black"
        android:textSize="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/trans_hotspot"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotspot_pnt_icon"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/popup_bg_center"
        android:maxLines="2"
        android:padding="20dp"
        android:text="Regular happenings, those hotels, pubs, malls etc."
        android:textColor="@color/Black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/trans_evntlist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/trans_map"
        android:layout_marginTop="140dp"
        android:background="@drawable/popup_bg_right"
        android:maxLines="2"
        android:padding="20dp"
        android:text="List view"
        android:textColor="@color/Black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/trans_map"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/map_pnt_icon"
        android:layout_marginRight="6dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/popup_bg_center"
        android:maxLines="2"
        android:padding="20dp"
        android:text="Map view"
        android:textColor="@color/Black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/trans_nearby_events"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/popup_bg_left"
        android:maxLines="2"
        android:padding="20dp"
        android:text="Those splendid events happening near you."
        android:textColor="@color/Black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/trans_search"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/popup_bg_right"
        android:padding="20dp"
        android:text="Search for any event."
        android:textColor="@color/Black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/trans_add_event"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_event_pt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/popup_bg_right"
        android:padding="20dp"
        android:text="Add Events Around You."
        android:textColor="@color/Black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/trans_gami"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/gami_pt"
        android:layout_marginRight="6dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/popup_bg_right"
        android:padding="20dp"
        android:text="Amazing rewards program,adding to overall fun."
        android:textColor="@color/Black"
        android:visibility="gone" />

</RelativeLayout>