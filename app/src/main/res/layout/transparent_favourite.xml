<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/navi_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/actionbar_color"
        android:src="@drawable/touch_image_up"
        android:layout_marginLeft="10dp"
        android:visibility="visible"

        />

    <ImageView
        android:id="@+id/favorite_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="79dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/actionbar_color"
        android:src="@drawable/touch_image_up"
        android:layout_marginLeft="28dp"
        android:visibility="gone"

        />


    <ImageView
        android:id="@+id/popular_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="79dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/actionbar_color"
        android:src="@drawable/touch_image_up"
        android:layout_marginLeft="112dp"
        android:visibility="gone"

        />

    <ImageView
        android:id="@+id/hotspot_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="79dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/actionbar_color"
        android:src="@drawable/touch_image_up"
        android:layout_marginLeft="205dp"
        android:visibility="gone"

        />

    <ImageView
        android:id="@+id/eventlst_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="125dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/actionbar_color"
        android:src="@drawable/touch_image_up"
        android:layout_marginRight="22dp"
        android:visibility="gone"
        />


    <ImageView
        android:id="@+id/map_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/actionbar_color"
        android:src="@drawable/touch_image_up"
        android:layout_marginLeft="240dp"
        android:visibility="gone"

        />


    <ImageView
        android:id="@+id/nearby_pnt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/actionbar_color"
        android:src="@drawable/touch_image_up"
        android:layout_marginLeft="178dp"
        android:visibility="gone"

        />



    <ImageView
        android:id="@+id/adv_screen_pt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/touch_image_up"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        />


    <ImageView
        android:id="@+id/add_event_pt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/touch_image_up"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:visibility="gone"
        />


    <ImageView
        android:id="@+id/gami_pt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="74dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/touch_image_up"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="40dp"
        android:visibility="gone"
        />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/trans_navigation_drawer"
        android:layout_below="@+id/navi_pnt_icon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Menu: Customize Your City Profile and Preferences. "
        android:textColor="@color/Black"
        android:background="#d3d3d3"
        android:padding="20dp"
        android:textSize="12dp"
        android:visibility="visible"
        android:layout_alignParentLeft="true"


        />


    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/trans_favorite"
        android:layout_below="@+id/favorite_pnt_icon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Favorite: Check the Favorites Around the Your City."
        android:maxLines="2"
        android:textColor="@color/Black"
        android:background="#d3d3d3"
        android:padding="20dp"
        android:visibility="gone"
        android:textSize="12dp"
        />


    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="140dp"
        android:id="@+id/trans_popular"
        android:layout_below="@+id/popular_pnt_icon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Popular: Trendy Events, You must Visit"
        android:maxLines="2"
        android:textColor="@color/Black"
        android:background="#d3d3d3"
        android:padding="20dp"
        android:visibility="gone"
        android:textSize="12dp"
        />

    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="180dp"


        android:id="@+id/trans_hotspot"
        android:layout_below="@+id/hotspot_pnt_icon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hotspot:            Malls,Hotels and Much More."
        android:maxLines="2"
        android:textColor="@color/Black"
        android:background="#d3d3d3"
        android:padding="20dp"
        android:visibility="gone"
    />


    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:id="@+id/trans_evntlist"
        android:layout_below="@+id/eventlst_pnt_icon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="List of Events."
        android:maxLines="2"
        android:textColor="@color/Black"
        android:background="#d3d3d3"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        />


    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginRight="85dp"
        android:id="@+id/trans_map"
        android:layout_below="@+id/map_pnt_icon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Checkout Events in Map."
        android:maxLines="2"
        android:textColor="@color/Black"
        android:background="#d3d3d3"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        />


    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginRight="105dp"
        android:id="@+id/trans_nearby_events"
        android:layout_below="@+id/nearby_pnt_icon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Your Nearby Events."
        android:maxLines="2"
        android:textColor="@color/Black"
        android:background="#d3d3d3"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        />



    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:id="@+id/trans_search"
        android:layout_below="@+id/navi_pnt_icon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Advance Search"
        android:textColor="@color/Black"
        android:background="#d3d3d3"
        android:padding="20dp"
        android:visibility="gone"
        />


    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginRight="80dp"
        android:id="@+id/trans_add_event"
        android:layout_above="@+id/add_event_pt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:text="Add Events Around You."
        android:textColor="@color/Black"
        android:background="#d3d3d3"
        android:padding="20dp"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/trans_gami"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Gamification: The Real Game For Who Really Enthusiastic In Events."
        android:textColor="@color/Black"
        android:background="#d3d3d3"
        android:padding="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_below="@+id/gami_pt"
        />



</RelativeLayout>