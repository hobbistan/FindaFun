<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/placeholder_small_old" />

    <TextView
        android:id="@+id/event_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/event_image"
        android:text=""
        android:textSize="18dp"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/star_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/event_detail"
        android:layout_alignStart="@+id/event_detail"
        android:layout_below="@+id/event_image"
        android:layout_marginTop="1dp"
        android:src="@drawable/star" />

    <TextView
        android:id="@+id/event_star_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/star_image"
        android:text="0" />

    <TextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/event_image"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="ago" />

</RelativeLayout>