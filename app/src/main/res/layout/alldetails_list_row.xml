<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/event_image"
        android:src="@drawable/placeholder_small_old"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_detail"
        android:text=""
        android:typeface="serif"
        android:layout_toRightOf="@+id/event_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/star"
        android:id="@+id/star_image"
         android:layout_below="@+id/event_image"
        android:layout_alignStart="@+id/event_detail"
        android:layout_alignLeft="@+id/event_detail"
        android:layout_marginTop="1dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/star_image"
        android:text="0"
        android:layout_below="@+id/event_image"
        android:layout_marginLeft="10dp"
        android:id="@+id/event_star_count"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/event_image"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="ago"
        android:id="@+id/event_time"/>

</RelativeLayout>