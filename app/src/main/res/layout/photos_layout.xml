<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rewards_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cst_action_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/actionbar_color">

        <ImageView
            android:id="@+id/bookings_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            android:src="@drawable/backarrow" />

        <TextView
            android:id="@+id/bookings_action_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/bookings_back_btn"
            android:padding="5dp"
            android:text="PHOTOS"
            android:textColor="@color/city_text_color"
            android:textSize="22dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:background="@color/White">

        <TextView
            android:id="@+id/points_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="Points"
            android:textColor="@color/title_red"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/leaderboard_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/points_label"
            android:layout_alignStart="@+id/points_label"
            android:layout_below="@+id/points_label"
            android:layout_marginTop="15dp"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/photo_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/points_label"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/leaderboard_image"
            android:text="5"
            android:textSize="50dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_value"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/bookings_total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Total Photos:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/total_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/bookings_total_label"
                android:padding="5dp"
                android:text="0"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/White"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Photos"
            android:textColor="@color/title_red"
            android:textSize="20dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/White"></View>

    <ListView
        android:id="@+id/photos_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:divider="@color/White"
        android:dividerHeight="1dp"></ListView>

</LinearLayout>